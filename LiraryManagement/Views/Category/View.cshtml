@model LiraryManagement.Models.ViewModel.UpdateCategoryViewModel

<h1>Edit Author</h1>

<form class="row g-3 needs-validation" method="post" asp-action="Edit" asp-controller="Category" novalidate>
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="col-md-6 position-relative">
        <label for="CategoryName" class="form-label">Name</label>
        <input type="text" class="form-control" id="CategoryName" name="CategoryName" asp-for="CategoryName" required>
        <div class="invalid-tooltip">
            Please provide a valid name.
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit form</button>
        <button class="btn btn-primary" type="submit" asp-action="Delete" asp-controller="Category">Delete form</button>
    </div>
</form>
